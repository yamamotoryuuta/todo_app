<div class="task_container">
  <h1>タスクを編集する</h1>
  <%= form_with model: @task, url: {action: :update} , local: true do |f| %>
    <div class="form_card">
      <%= f.label :name, class: 'form_label'%>
      <%= f.text_field :name, class: 'form_field'%>
    </div>
    <div class="form_card">
      <%= f.label :memo, class: 'form_label' %>
      <%= f.text_area :memo, class: 'form_field' %>
    </div>
    <div class="form_selecter">
      <%= select :task, :category_id, @categories.map{ |c| [c.title, c.id] }, {}, { class: 'form-control' } %>
    </div>
    <%= f.submit "編集する" %>
  <% end %>
  <p style="margin-top:20px;"><%= link_to "topへ戻る", root_path %></p>
</div>
